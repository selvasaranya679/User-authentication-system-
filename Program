      Align-items: center;  

      Height: 100vh;  

    }  

    .container {  

      Background: rgba(255, 255, 255, 0.1);  

      Padding: 30px;  

      Border-radius: 12px;  

      Width: 300px;  

      Text-align: center;  

    }  

    Input {  

      Width: 90%;  

      Padding: 10px;  

      Margin: 10px 0;  

      Border: none;  

      Border-radius: 5px;  

    }  

    Button {  

      Padding: 10px 20px;  

